{
  "name": "STM32 Development",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash"
  },
  "extensions": [
    "ms-vscode.cpptools",
    "ms-vscode.cmake-tools",
    "ms-vscode.cortex-debug",
    "twxs.cmake"
  ],
  "postCreateCommand": "sudo apt-get update && sudo apt-get install -y cmake build-essential",
  "remoteUser": "vscode",
  "workspaceFolder": "/workspace"
}
